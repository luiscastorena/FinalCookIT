<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalCookIT" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="backgroundColor">#000000</item>
        <item name="colorPrimary">@color/icons</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/primary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigation" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/icons</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary_text</item>
    </style>

    <style name="TextFieldsSesion" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24dp</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary_text</item>
        <item name="android:padding">15dp</item>

    </style>
    
    <style name="SplashTheme" parent="Theme.FinalCookIT">
        <item name="android:windowBackground">@drawable/splashso</item>
    </style>

    <style name="styleTag" parent="Theme.FinalCookIT">
        <item name="android:textSize">30sp</item>
        <item name="color">@color/primary_text</item>
    </style>

</resources>